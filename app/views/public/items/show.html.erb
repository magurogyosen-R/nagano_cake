<div class = "container">
  <div class="row">
      <div class="col-2">
          <%= render 'admin/genres/genrebox', genres: @genres %>
      </div>

      <div class="col-4 ">
      <%= image_tag @item.get_image, size: "250x150" %>
      </div>

      <div class="col-4 ">
       <table class="table">
        <tr>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <th><%= @item.introduction %></th>
        </tr>
        <tr>
          <th><%= (@item.price * 1.1).floor %>円 (<%= @item.price %>)円 </th>
        </tr>
        <tr>
          <th>個数選択の選択ボタン</th>
          <th><%= link_to "カートに入れる",public_cart_items_path, class:"btn btn-group-sm btn-success" %></th>
        </tr>
      </table>
      </div>
  </div>
</div>