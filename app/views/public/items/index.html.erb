<div class="container">
  <div class="form-inline">
    <div class="col-2">
     <%= render 'admin/genres/genrebox', genres: @genres %>
    </div>

    <div class="col-10">
      <h2>商品一覧</h2>
      <div class="form-inline mt-4 col-xs-9">
        <% @items.each do |item| %>
        <div class="item-box">
          <table class="table">
            <tr>
              <th><%= link_to  public_item_path(item.id) do %>
              <%= image_tag item.get_image, size: "150x100" %>
              <% end %>
              </th>
            </tr>
            <tr>
              <th><%= link_to item.name, public_item_path(item.id) %></th>
            </tr>
            <tr>
              <th><%= (item.price * 1.1).to_i %>円</th>
            </tr>
          </table>
        </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>