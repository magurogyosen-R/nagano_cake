<div class = "container">
  <div class="row">
      <div class="col-2">
          <%= render 'admin/genres/genrebox', genres: @genres %>
      </div>
      <div class="col-10 ">
        <h4>商品一覧</h4>
        　<tbody>
           <% @items.each do |item| %>
             <tr>
               <%= link_to public_item_path(item.id) do %>
               <td>
                 <%= image_tag item.get_image, size: "150x100" %></br>
               </td>
               <% end %>
               <td>
                <%= item.name %></br>
               </td>
               <td>
                 <%= item.price %>円</br>
               </td>
             </tr>
            <% end %>
          </tbody>
          <%= paginate @items %>
      </div>
  </div>
</div>