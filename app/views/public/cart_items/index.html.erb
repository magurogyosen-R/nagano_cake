<h3>ショッピングカート</h3>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @cart_item.each do |cart_item| %>
      <tr>
        <td><%= image_tag @item.get_image %><%= @item.name %></td>
        <td><%= (cart_item.price * 1.1).floor %></td>
        <td><%= @item.amount %></td>
        <td><%= (cart_item.price * 1.1).floor * cart_item.amount %></td>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <table>
    <tr>
      <td>合計金額</td>
      <td><% @total_price +=  (cart_item.price * 1.1).floor * cart_item.amount %></td>
    </tr>
  </table>

  <%= link_to "確認画面に進む",new_public_order_path, class: "btn btn-primary" %>
<% end %>