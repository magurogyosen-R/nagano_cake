<h3>ショッピングカート</h3>
<%= form_with model: @order,url: confirm_public_orders_path, method: :post do |f| %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @cart_item.each do |cart_item| %>
      <tr>
        <td><%= image_tag @item.get_image %><%= @item.name %></td>
        <td><%= (cart_item.price * 1.1).floor %></td>
        <td><%= @item.amount %></td>
        <td><%= (cart_item.price * 1.1).floor * cart_item.amount %></td>
        <% @合計金額 +=  (cart_item.price * 1.1).floor * cart_item.amount %>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <table>
    <tr>
      <th>合計金額</th>
    </tr>
    <tr>
      <td></td>
    </tr>
  </table>
  
  <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
<% end %>