<h3>ショッピングカート</h3>
 <div class="container">
  <table class="table">
      <thead>
         <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
         </tr>
      </thead>
      <tbody>
         <% @cart_items.each do |cart_item| %>
           <tr>
             <td>
               <%= cart_item.item.name %>
             </td>
             <td>
               <%= cart_item.item.price %>
             </td>
             <td>
               <%= cart_item.item.amount %>円
             </td>
             <td>
             </td>
           </tr>
         <% end %>
      </tbody>
  </table>
  <%= link_to "確認画面に進む",new_public_order_path, class: "btn btn-primary" %>
