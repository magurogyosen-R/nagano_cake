<div class="cotainer">
  <div class="row">
    <div class="col-11 offset-1">

      <h4 class="mt-3 offset-1">配送先登録/一覧</h4>
      <%= form_with model: @address, url: addresses_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :postcode,"郵便番号（ハイフンなし）", class: "col-md-2 mt-4
        <%= f.text_field :postcode,class: "form-control-sm" %>
      </div>

      <div class="form-group">
        <%= f.label :address,"住所", class: "col-md-2" %>
        <%= f.text_field :address,class: "form-control-sm col-md-5" %>
      </div>

      <div class="form-group">
        <%= f.label :name, "宛名", class: "col-md-2" %>
        <%= f.text_field :name,class: "form-control-sm" %>
        <%= f.submit "新規登録", class: "btn btn-sm btn-success mb-1 ml-5" %>
      </div>
    </div>


<% end %>
  <div class="row offset-1 col-7">
    <table class="table table-bordered mt-5">
      <thead>
        <tr>
          <th class="table-active col-2">郵便番号</th>
          <th class="table-active col-5">住所</th>
          <th class="table-active col-2">宛名</th>
          <th class="table-active col-3"></th>
        </tr>
      </thead>
        <% @addresses.each do |address| %>
      <tbody>
        <tr>
          <th><%= address.postcode %></th>
          <th><%= address.address %></th>
          <th><%= address.name %></th>
          <th>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success ml-1" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger ml-2" %>
          </th>
    <% end %>
        </tr>
      </tbody>
    </table>
  </div>

    </div>
  </div>