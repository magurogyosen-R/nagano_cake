<div class=container>
  <div class="row">
    <div class="col-12">
    <h3 class="col-12 offset-1">注文履歴一覧</h3>
    <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= order.postcode %>
              <%= order.address %>
              <%= order.name %>
            </td>
            <td>
              <% @cart_items.each do |cart_item| %>
                <%= cart_item.item.name %>
              <% end %>
            </td>
            <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %>円</td>
            <td><%= order.order_status %></td>
            <td><%= link_to "表示する", public_order_path(order), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>