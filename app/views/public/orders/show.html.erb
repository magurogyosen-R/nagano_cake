<div class=container>
  <div class="row">
  <h3 class="col-xs-6 offset-1">注文履歴詳細</h3>
    <div class="col-xs-6 offset-1"><strong>注文情報</strong></div>
    <table class "table">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.postcode %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.order_status %></td>
      </tr>
    </table>

    <div class="col-md-6 offset-1"><strong>注文内容</strong></div>
    <table class="table">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_detail.each do |order_detail| %>
        <tr>
          <% @total_price +=(order_detail.item.price * 1.1).floor * order_detail.amount %>
          <td><%= order_detail.item.name %></td>
          <td><%= (order_detail.item.price * 1.1).to_i %></td>
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.item.price * 1.1).floor * order_detail.amount .to_i %></td>

        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="col-md-6 offset-7"><strong>請求情報</strong></div>
    <table class "table offset-6">
      <tr>
        <th>商品合計</th>
        <td><%= @total_price.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.freight.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th><strong>ご請求額</strong></th>
        <td><%= @order.total_cost.to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
</div>

