<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name,"名前　（姓）" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>

    <%= f.label :first_name,"（名）" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

   <div class="field">
    <%= f.label :last_name_kana,"フリガナ（セイ）" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>

    <%= f.label :first_name_kana,"（メイ）" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :email,"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postcode,"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :address,"住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :phone_number,"電話番号（ハイフンなし）" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
  </div>
<% end %>

  <h4>既に登録済みの方</h4>
  <%= render "public/shared/links" %>
  からログインしてください。
