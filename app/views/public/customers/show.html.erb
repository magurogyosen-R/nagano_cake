<div class="cotainer">
  <div class="row">
    <div class="col-md-6 offset-1">

      <h4 class="mt-3 offset-1">マイページ</h4>

    <div class="row mt-4 mb-3">
      <div class="col-md-2">
      <h4>登録情報</h4>
      </div>
      <div class="col-xs-4">
      <%= link_to "編集する", edit_customer_path, class: "btn btn-sm btn-success" %>
      </div>
    </div>

  <table class="table table-bordered">
    <tr>
      <th class="table-active col col-lg-4">氏名</th>
      <td class="col col-lg-8"><%= @customer.full_name %></td>
    </tr>
    <tr>
      <th class="table-active">カナ</th>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <th class="table-active">郵便番号</th>
      <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <th class="table-active">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="table-active">電話番号</th>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <th class="table-active">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>

  <div class="row mt-4 mb-3">
    <div class="col-md-2">
    <h4>配送先</h4>
    </div>
    <div class="col-xs-4">
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
    <h4>注文履歴</h4>
    </div>
    <div class="col-xs-4">
    <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>


    </div>
  </div>
</div>