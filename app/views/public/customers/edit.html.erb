<div class="cotainer">
  <div class="row">
    <div class="col-8 offset-1">
<h4 class="mt-3">会員情報編集</h4>

    <%= form_with model: @customer, url: public_customer_path do |f| %>
  <div>
    <%= f.label :last_name,"氏名",class: "col-md-2 mt-4" %>
    <%= f.text_field :last_name,class: "form-control-sm mr-5" %>
    <%= f.text_field :first_name,class: "form-control-sm" %>
  </div>
  <div>
    <%= f.label :last_name_kana,"フリガナ",class: "col-md-2" %>
    <%= f.text_field :last_name_kana,class: "form-control-sm mr-5 mt-3" %>
    <%= f.text_field :first_name_kana,class: "form-control-sm" %>
  </div>
  <div>
    <%= f.label :postcode,"郵便番号",class: "col-md-2" %>
    <%= f.text_field :postcode,class: "form-control-sm mt-3" %>
  </div>
  <div>
    <%= f.label :address,"住所",class: "col-md-2" %>
    <%= f.text_field :address,class: "form-control-sm col-md-6 mt-3" %>
  </div>
  <div>
    <%= f.label :phone_number,"電話番号",class: "col-md-2" %>
    <%= f.text_field :phone_number,class: "form-control-sm mt-3" %>
  </div>
  <div>
    <%= f.label :email,"メールアドレス",class: "col-md-2" %>
    <%= f.text_field :email,class: "form-control-sm mt-3" %>
  </div>

  <div>
    <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success mt-4 mr-5 offset-2" %>
    <%= link_to "退会する", out_public_customers_path, class: "btn btn-sm btn-danger mt-4 ml-5" %>
  </div>


<% end %>
    </div>
  </div>
</div>