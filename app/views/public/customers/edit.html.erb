<h4>会員情報編集</h4>

    <%= form_with model: @customer, url: public_customer_path do |f| %>
  <div>
    <%= f.label :last_name,"氏名" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name_kana,"フリガナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div>
    <%= f.label :postcode,"郵便番号" %>
    <%= f.text_field :postcode %>
  </div>
  <div>
    <%= f.label :address,"住所" %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :phone_number,"電話番号" %>
    <%= f.text_field :phone_number %>
  </div>
  <div>
    <%= f.label :email,"メールアドレス" %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
    <%= link_to "退会する", destroyupdate_public_customers_path(@customer), method: :patch, class: "btn btn-sm btn-danger" %>
  </div>

<% end %>
