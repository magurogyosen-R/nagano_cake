<h4>会員一覧</h4>

<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
        <%= customer.full_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <% if customer.is_deleted == false %>
        <td class="text-success">有効</td>
      <% else %>
        <td class="text-secondary">退会</td>
      <% end %>
    </tr>
<% end %>
  </tbody>
</table>
