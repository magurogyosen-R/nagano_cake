<div class="cotainer">
  <div class="row">
    <div class="col-8 offset-1">

    <h4 class="mt-3 offset-1">会員一覧</h4>
    <table class="table mt-3">
      <thead>
        <tr>
          <th class="table-active col-1">会員ID</th>
          <th class="table-active col-2">氏名</th>
          <th class="table-active col-3">メールアドレス</th>
          <th class="table-active col-1">ステータス</th>

        </tr>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.full_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <% if customer.is_deleted == false %>
          <td class="text-success">有効</td>
          <% else %>
          <td class="text-secondary">退会</td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>
    </div>
  </div>
</div>