<div class="cotainer">
  <div class="row">
    <div class="col-9 offset-1">


    <h4 class="mt-3"><%= @customer.full_name %>さんの会員情報編集</h4>

    <%= form_with model: @customer, url: admin_customer_path,local:true do |f| %>
    <div>
      <%= f.label :id,"会員ID", class: "col-md-2 mt-4" %>
      <%= @customer.id %>
    </div>
    <div>
      <%= f.label :last_name,"氏名", class: "col-md-2 mt-2" %>
      <%= f.text_field :last_name,class: "form-control-sm mr-5" %>
      <%= f.text_field :first_name,class: "form-control-sm" %>
    </div>
    <div>
      <%= f.label :last_name_kana,"フリガナ", class: "col-md-2 mt-2" %>
      <%= f.text_field :last_name_kana,class: "form-control-sm mr-5" %>
      <%= f.text_field :first_name_kana,class: "form-control-sm" %>
    </div>
    <div>
      <%= f.label :postcode,"郵便番号", class: "col-md-2 mt-2" %>
      <%= f.text_field :postcode,class: "form-control-sm mr-5" %>
    </div>
    <div>
      <%= f.label :address,"住所", class: "col-md-2 mt-2" %>
      <%= f.text_field :address,class: "form-control-sm mr-5" %>
    </div>
    <div>
      <%= f.label :phone_number,"電話番号", class: "col-md-2 mt-2" %>
      <%= f.text_field :phone_number,class: "form-control-sm mr-5" %>
    </div>
    <div>
      <%= f.label :email,"メールアドレス", class: "col-md-2 mt-2" %>
      <%= f.text_field :email,class: "form-control-sm mr-5" %>
    </div>
    <div>
      <%= f.label :is_deleted, "会員ステータス", class: "col-md-2 mt-2" %>
      <div class="form-check form-check-inline">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted,"有効", value: false %>
      </div>
      <div class="form-check form-check-inline">
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted,"退会", value: true %>
      </div>
    </div>

    <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success mt-4 offset-2" %>
    <% end %>

    </div>
  </div>
</div>
