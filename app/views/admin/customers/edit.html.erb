<h5><%= @customer.full_name %>さんの会員情報編集</h5>

<%= form_with model: @customer, url: admin_customer_path,local:true do |f| %>
  <div>
    <%= f.label :id,"会員ID" %>
    <%= @customer.id %>
  </div>
  <div>
    <%= f.label :last_name,"氏名" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name_kana,"フリガナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div>
    <%= f.label :postcode,"郵便番号" %>
    <%= f.text_field :postcode %>
  </div>
  <div>
    <%= f.label :address,"住所" %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :phone_number,"電話番号" %>
    <%= f.text_field :phone_number %>
  </div>
  <div>
    <%= f.label :email,"メールアドレス" %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :is_deleted, "会員ステータス" %>
    <div class="form-check form-check-inline">
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted,"有効", value: false %>
    </div>
    <div class="form-check form-check-inline">
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted,"退会", value: true %>
    </div>
  </div>

  <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
<% end %>
