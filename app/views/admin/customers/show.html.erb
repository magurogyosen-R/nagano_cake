<div class="cotainer">
  <div class="row">
    <div class="col-md-9 offset-1">

    <h4 class="mt-3 mb-4"><%= @customer.full_name %>さんの会員詳細</h4>
      <table class="table table-bordered col-6">
        <tr>
          <th class="col-4">会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th class="col-4">氏名</th>
          <th><%= @customer.full_name %></th>
        </tr>
        <tr>
          <th class="col-4">カナ</th>
          <th><%= @customer.full_name_kana %></th>
        </tr>
        <tr>
          <th class="col-4">郵便番号</th>
          <th><%= @customer.postcode %></th>
        </tr>
        <tr>
          <th class="col-4">住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th class="col-4">電話番号</th>
          <th><%= @customer.phone_number %></th>
        </tr>
        <tr>
          <th class="col-4">メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th class="col-4 mt-5">会員ステータス</th>
          <% if @customer.is_deleted == false %>
          <th class="text-success">有効</th>
          <% else %>
          <th class="text-secondary">退会</th>
          <% end %>
        </tr>
      </table>
        <div>
          <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-sm btn-success mt-3 offset-2 mr-5" %>
          <%= link_to "注文履歴一覧を見る", public_orders_path, class: "btn btn-sm btn-primary mt-3" %>
        </div>


    </div>
  </div>
</div>