<h5><%= @customer.full_name %>さんの会員詳細</h5>
  <table>
   <tr>
     <td>会員ID</td>
     <td><%= @customer.id %></td>
   </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
        <% if @customer.is_deleted == false %>
        <td class="text-success">有効</td>
        <% else %>
        <td class="text-secondary">退会</td>
        <% end %>
    </tr>
  </table>
  <div>
    <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-sm btn-success" %>
    <%= link_to "注文履歴一覧を見る", public_orders_path, class: "btn btn-sm btn-primary" %>
  </div>
