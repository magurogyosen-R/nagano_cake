<h3>注文履歴詳細</h3>
<p><strong>購入者</strong></p>
<p><%= customer.name %></p>
<p><strong>注文日</strong></p>
<p><%= order.created_at.strftime('%Y/%m/%d') %></p>
<p><strong>配送先</strong></p>
<p>
  <%= order.postcode %>
  <%= order.address %><br>
  <%= order.name %>
</p>
<p><strong>支払方法</strong></p>
<p><%= order.payment_method %></p>
<p><strong>注文ステータス</strong></p>
<p>
  <%= form_with @order, url: admin_order_path do |f| %>
    <%= f.select :order_status, "入金待ち","入金確認","製作中","発送準備中","発送済" %>
    <%= f.submit "更新", class: "btn btn-primary" %>
  <% end %>
</p>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.name %></td>
      <td><%= (cart_item.price * 1.1).floor %></td>
      <td><%= @order.amount %></td>
      <td><%= (cart_item.price * 1.1).floor * cart_item.amount %></td>
      <td><%= select('order_detail','production_statuses_status',["製作不可", "製作待ち", "製作中", "製作完了"] ) %></td>
    </tr>
  </tbody>
</table>
