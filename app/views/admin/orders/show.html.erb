<div class="container">
  <div class="row">
    
  </div>
</div>


<h3>注文履歴詳細</h3>
<p><strong>購入者</strong></p>
<p><%= customer.name %></p>
<p><strong>注文日</strong></p>
<p><%= order.created_at.strftime('%Y/%m/%d') %></p>
<p><strong>配送先</strong></p>
<p>
  <%= order.postcode %>
  <%= order.address %><br>
  <%= order.name %>
</p>
<p><strong>支払方法</strong></p>
<p><%= order.payment_method %></p>
<p><strong>注文ステータス</strong></p>
<p>
  <%= form_with @order, url: admin_order_path do |f| %>
    <%= f.select :order_status, ["入金待ち","入金確認","製作中","発送準備中","発送済"] %>
    <%= f.submit "更新", class: "btn btn-success" %>
  <% end %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.name %></td>
        <td><%= (order_detail.price * 1.1).floor %></td>
        <td><%= order_detail.amount %></td>
        <td><%= (order_detail.price * 1.1).floor * order_detail.amount %></td>
        <%= form_for order_detail, url: admin_order_path(order_detail) do |f| %>
          <td><%= f.select :production_statuses,["製作不可", "製作待ち", "製作中", "製作完了"]  %></td>
          <td><%= f.submit "更新",class:"btn btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
