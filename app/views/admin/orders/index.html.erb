<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order) %></td>
        <td><%= order.name %></td>
        <td><% order.amount_all %> </td>
        <td><%= order.order_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class="text-center"><%= paginate @orders %></p>