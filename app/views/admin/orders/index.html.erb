<div class="container">
  <div class="row">
    <div class="col-12">
    <h3 class="col-12 offset-1">注文履歴一覧</h3>
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order) %></td>
            <td><%= order.name %></td>
            <td><%= order.amount %> ※amoutでエラー発生 </td>
            <td><%= order.order_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center"><%= paginate @orders %></div>
    </div>
  </div>
</div>