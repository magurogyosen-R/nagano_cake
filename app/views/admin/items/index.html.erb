<h3>商品一覧</h3>

<div class="container">
  <table class="table">
      <thead>
         <tr>
          <th>商品id</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
         </tr>
      </thead>
      <tbody>
         <% @items.each do |item| %>
           <tr>
             <td>
               <%= item.id %>
             </td>
             <td>
              <%= link_to item.name, admin_item_path(item.id) %>
             </td>
             <td>
               <%= item.price %>円
             </td>
             <td>
               <%= item.genre_name %>
             </td>
             <td>
               <% if item.sale_status == true %>
                 販売中
               <% else %>
                 販売停止中
               <% end %>
             </td>
           </tr>
         <% end %>
      </tbody>
  </table>
  　<p class="text-center"><%= paginate @items %></p>
</div>
