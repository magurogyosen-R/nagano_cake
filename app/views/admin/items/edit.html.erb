<div class="row">
  <div class="container">
    <h5>編集画面</h5>

    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

      <p>商品画像</p>
      <%= f.file_field :image, accept: "image/*" %>

      <p>商品名</p>
      <%= f.text_field :name %>

      <p>商品説明</p>
      <%= f.text_area :introduction %>

      <p>ジャンル</p>
      <%= f.collection_select :genre_name, Genre.all, :name, :name %>

    	<p>税抜価格</p>
    	<%= f.text_field :price %>円</br>

    	<div class="sale_status">
        <%= f.label :販売ステータス %>
        <div>
          <%= f.radio_button :sale_status, true %>
          <%= f.label :sale_status, '販売中', value: true %>
        </div>
        <div>
          <%= f.radio_button :sale_status, false %>
          <%= f.label :sale_status, '販売停止中', value: false %>
        </div>
      </div>

      <%= f.submit '変更を保存', class:"btn btn-group-sm btn-success" %>
    <% end %>
  </div>
</div>