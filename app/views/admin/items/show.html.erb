<div class="row">
  <div class="container">
    <h5>商品詳細</h5>

    <div class="col-xs-5">
      <%= image_tag @item.get_image, size: "250x150" %>
    </div>

    <div class="col-xs-7">
      <table class="table">
        <tr>
          <th>商品名</th>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @item.introduction %></th>
        </tr>
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
        <tr>
          <th>税込価格（税抜価格）</th>
          <th><%= @item.price %>円 (<%= @item.price %>)円 </th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th></th>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-group-sm btn-success" %>
    </div>
  </div>
</div>
