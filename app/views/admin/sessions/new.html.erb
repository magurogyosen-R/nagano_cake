<div class="cotainer">
  <div class="row">
    <div class="col-9 offset-1">

    <h4 class="mt-3">管理者ログイン</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email,"メールアドレス",class: "col-md-2 mt-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control-sm col-md-4" %>
    </div>

    <div class="field">
      <%= f.label :password,"パスワード",class: "col-md-2 mt-3" %>
      <%= f.password_field :password, autocomplete: "current-password",class: "form-control-sm col-md-4" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-sm btn-primary offset-2 mt-4" %>
    </div>
    <% end %>

    <%= render "admin/shared/links" %>

    </div>
  </div>
</div>